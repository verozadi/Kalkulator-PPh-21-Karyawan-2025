
{
  "name": "veroz-tax-calculator",
  "productName": "VerozTax PPh 21",
  "version": "1.0.0",
  "description": "Kalkulator PPh 21 Karyawan 2025 Desktop App",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:start": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "pph21",
    "tax",
    "calculator",
    "electron"
  ],
  "author": "VerozAdi",
  "license": "ISC",
  "dependencies": {
    "firebase": "^10.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.0"
  },
  "build": {
    "appId": "com.veroz.taxcalculator",
    "productName": "VerozTax",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.svg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
